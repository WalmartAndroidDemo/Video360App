<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walmart.apps.video360app.HomeActivity"
    android:background="@drawable/home_page"
    android:id="@+id/ome">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView34" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/ic_launcher2"
            android:id="@+id/imageView17"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView34" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/icon_360_1"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView17" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/icon_360_4"
            android:id="@+id/imageView11"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/icon_360_2"
            android:id="@+id/imageView12"
            android:layout_alignTop="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/icon_360_6"
            android:id="@+id/imageView3"
            android:layout_below="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/icon_360_3"
            android:id="@+id/imageView4"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/icon_360_5"
            android:id="@+id/imageView"
            android:layout_below="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/icon_360_7"
            android:id="@+id/imageView13"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignStart="@+id/imageView3" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:elegantTextHeight="false"
        android:background="#00000000"
        android:text="360Â° Videos App is the destination for the most popular and compelling virtual reality videos"
        android:padding="3dp"
        android:focusable="false"
        android:layout_gravity="bottom"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/guestLogin" />

    <TextView
        android:id="@+id/guestLogin"
        android:background="@mipmap/icon_360"
        android:layout_width="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:onClick="guestLogin"
        android:layout_marginBottom="29dp"
        android:text="Click"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="bottom|center"
        android:padding="2sp"/>

</RelativeLayout>
